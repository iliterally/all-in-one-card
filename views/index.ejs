<%- include('partials/header') %>

<style>
  body {
    background-image: linear-gradient(to bottom, #f1f6f9, #9ba4b5);
    font-family: "Times New Roman", Times, serif;
  }

  .navbar {
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 2;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #9ba4b5;
    padding: 1rem;
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    margin-top: 0;
    border-bottom-left-radius: 20px;
    border-bottom-right-radius: 20px;
  }

  .companyName {
    color: black;
  }

  .navbar-logo {
    display: flex;
    align-items: center;
  }

  .navbar-logo img {
    height: 50px;
  }

  .navbar-toggler {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-end;
    position: relative;
    width: 40px;
    height: 40px;
    cursor: pointer;
  }

  .navbar-toggler-label {
    position: absolute;
    top: 50%;
    right: 0;
    transform: translateY(-50%);
    width: 30px;
    height: 20px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: flex-end;
    cursor: pointer;
  }

  .navbar-toggler-label span {
    display: block;
    width: 100%;
    height: 3px;
    background-color: #333;
    transition: background-color 0.3s;
  }

  #navbar-toggle:checked ~ .navbar-toggler-label span:nth-child(1) {
    transform: translateY(6px) rotate(45deg);
    background-color: #fff;
  }

  #navbar-toggle:checked ~ .navbar-toggler-label span:nth-child(2) {
    opacity: 0;
  }

  #navbar-toggle:checked ~ .navbar-toggler-label span:nth-child(3) {
    transform: translateY(-6px) rotate(-45deg);
    background-color: #fff;
  }
  #navbar-toggle {
    display: none;
  }

  .navbar-collapse {
    position: absolute;
    top: 100%;
    right: 0;
    width: 200px;
    background-color: #9ba4b5;
    border-radius: 5px;
    padding: 10px;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s;
  }

  #navbar-toggle:checked ~ .navbar-collapse {
    opacity: 1;
    pointer-events: auto;
    background-color: #303d58;
  }

  .navbar-link {
    padding: 10px 0 2px 0;
    padding-top: 5px;
    text-align: center;
    display: block;
    font-size: 1.2rem;
    font-weight: bold;
    color: red;
    text-decoration: none;
    margin-bottom: 10px;
  }

  .navbar-link:hover {
    color: rgb(255, 117, 117);
  }
  .face {
    color: #007bffe9;
    font-size: 7.5rem;
    text-decoration: none;
  }

  .face:hover {
    color: #008cff;
  }

  .insta {
    color: #cc2366;
    font-size: 7.5rem;
  }

  .insta:hover {
    text-decoration: none;
    color: #fd297e;
  }

  .snap {
    font-size: 7.5rem;
    color: rgba(255, 255, 0, 0.703);
  }

  .snap:hover {
    text-decoration: none;
    color: yellow;
  }

  .tele {
    font-size: 7.5rem;
    color: #2aa9eeb2;
  }

  .tele:hover {
    color: #2aabee;
  }

  .card-row {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
    padding: 20px;
  }

  .card {
    width: 100%;
    border: none;
    border-radius: 20px;
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.7);
    transition: 0.3s ease-in-out;
    background-color: #e5eaef;
    padding: 20px;
    margin: 20px auto;
    margin-top: 7rem;
    background-image: linear-gradient(to bottom, #394867, #212a3e);
  }

  .card-img {
    width: 100%;
    border: none;
    border-radius: 20px;
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.7);
    transition: 0.3s ease-in-out;
    background-color: #fff;
    padding: 20px;
    margin: 20px auto;
    background-image: linear-gradient(to bottom, #394867, #212a3e);
  }

  img {
    max-width: 100%;
    height: 200px;
    border-radius: 5px;
    object-fit: cover;
    margin: 10px;
  }

  .abUs {
    font-size: 24px;
    width: 100%;
    padding: 5px;
    text-align: center;
    border-radius: 30px;
    background-color: #9ba4b5;
    font-weight: 550;
    margin: 20px 20px 25px 0;
  }

  .abUs-mh {
    font-size: 24px;
    width: 100%;
    padding: 5px;
    text-align: center;
    border-radius: 30px;
    background-color: #9ba4b5;
    font-weight: 550;
    margin: 20px 20px 25px 0;
  }

  h1 {
    font-size: 26px;
    margin-bottom: 20px;
    color: #333;
    font-weight: 550;
  }

  h3 {
    font-size: 22px;
    margin-bottom: 10px;
    color: #fff;
    font-weight: 500;
    padding: 5px;
  }

  h3.nav-Cname {
    font-size: 26px;
    font-weight: 500;
  }

  .col-md-6 {
    padding: 20px;
  }
</style>

