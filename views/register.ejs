<%- include('partials/header') %>
<style>
  body {
    margin: 0 0 5px 0;
    background-image: linear-gradient(to bottom, #F1F6F9, #9BA4B5);
    font-family:'Times New Roman', Times, serif;
  }

  .navbar {
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 2;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #9ba4b5;
    margin-top: 0px;
    padding: 1rem;
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    margin-top: 0;
    border-bottom-left-radius: 20px;
    border-bottom-right-radius: 20px;
  }

  .navbar-logo {
    display: flex;
    align-items: center;
  }

  .navbar-logo img {
    height: 50px;
    margin-right: 10px;
  }

  .navbar-brand {
    font-size: 1.5rem;
    font-weight: bold;
    text-decoration: none;
    color: #212A3E;
  }

  .navbar-brand:hover {
    color: #fff;
  }

  .navbar-toggler {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-end;
    position: relative;
    width: 40px;
    height: 40px;
    cursor: pointer;
  }

  .navbar-toggler-label {
    position: absolute;
    top: 50%;
    right: 0;
    transform: translateY(-50%);
    width: 30px;
    height: 20px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: flex-end;
    cursor: pointer;
  }

  .navbar-toggler-label span {
    display: block;
    width: 100%;
    height: 3px;
    background-color: #333;
    transition: background-color 0.3s;
  }

  #navbar-toggle:checked ~ .navbar-toggler-label span:nth-child(1) {
    transform: translateY(6px) rotate(45deg);
    background-color: #fff;
  }

  #navbar-toggle:checked ~ .navbar-toggler-label span:nth-child(2) {
    opacity: 0;
  }

  #navbar-toggle:checked ~ .navbar-toggler-label span:nth-child(3) {
    transform: translateY(-6px) rotate(-45deg);
    background-color: #fff;
  }
  #navbar-toggle {
  display: none;
}

  .navbar-collapse {
    position: absolute;
    top: 100%;
    right: 0;
    width: 200px;
    background-color: #9ba4b5;
    border-radius: 5px;
    padding: 10px;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s;
  }

  #navbar-toggle:checked ~ .navbar-collapse {
    opacity: 1;
    pointer-events: auto;
    background-color: #303D58;
  }

  .navbar-link {
    padding: 5px 0 5px 0;
    text-align: center;
    display: block;
    font-size: 1.2rem;
    font-weight: bold;
   color:#fff;
    text-decoration: none;
    margin-bottom: 10px;
  }

  .navbar-link:hover {
    color: #fff;
  }

  .card {
    width: 100%;
    background-image: linear-gradient(to bottom, #394867, #212A3E);
    border-radius: 20px;
    margin-top: 4.2rem;
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.7);
    transition: 0.3s ease-in-out;
  }

  .big {
    padding-bottom: 10%;
  }

  input[type="submit"] {
    background-color: #007bff;
    border: none;
    border-radius: 10px;
    color: white;
    padding: 10px 20px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    margin-top: 10px;
    cursor: pointer;
  }

  input[type="submit"]:hover {
    background-color: #0069d9;
  }

  .btn-next {
    background-color: rgb(28, 192, 28);
    border: none;
    border-radius: 10px;
    color: white;
    padding: 10px 20px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 20px;
    margin-top: 10px;
    cursor: pointer;
  }

  .btn-next:hover {
    background-color: rgb(37, 235, 37);
  }

  .btn-next a {
    color: inherit;
    text-decoration: none;
  }

  .text-center {
    font-size: 30px;
    color: #fff;
  }

  .Smedia{
    font-size: 30px;
    color: #fff;
  }

  .lable {
    font-size: 18px;
    font-weight: 500;
    color: #fff;
  }

  .lable2 {
    font-size: 18px;
    font-weight: 500;
    color: #fff;
  }


  .btn-primary {
    color: #fff;
    font-size: 20px;
    border-radius: 10px;
  }
</style>

<div class="navbar">
  <div class="navbar-logo">
    <img
      style="position: relative; bottom: 5px"
      src="/photos/logo.png"
      alt="Logo"
    />
    <h3 style="font-weight: bold; cursor: pointer; ">
      All In One Card
    </h3>
  </div>

  <div class="navbar-right">
    <div class="navbar-toggler">
      <input type="checkbox" id="navbar-toggle" />
      <label for="navbar-toggle" class="navbar-toggler-label">
        <span></span>
        <span></span>
        <span></span>
      </label>
      <div class="navbar-collapse">
        <a
          style="text-decoration: none;"
          href="/contact"
          class="navbar-link"
          >Contact</a
        >
        <a
          style="text-decoration: none; "
          href="/About"
          class="navbar-link"
          >About</a
        >
      </div>
    </div>
  </div>
</div>

<div class="container big">
  <div class="row justify-content-center mt-5">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h1 class="text-center">Register</h1>
          <form action="/register" method="post">
            <div class="form-group">
              <label class="lable" for="email">Email:</label>
              <input type="email" name="email" class="form-control" required />
            </div>
            <div class="form-group">
              <label class="lable" for="password">Password:</label>
              <input
                type="password"
                name="password"
                class="form-control"
                required
              />
            </div>
            <div class="form-group">
              <label class="lable" for="confirmPassword"
                >Confirm Password:</label
              >
              <input
                type="password"
                name="confirmPassword"
                class="form-control"
                required
              />
            </div>
            <h2 class="text-center mt-5">User Info</h2>
            <div class="form-group">
              <label class="lable" for="fullName">Full Name:</label>
              <input
                id="fullName"
                type="text"
                name="fullName"
                class="form-control"
              />
            </div>
            <div class="form-group">
              <label class="lable" for="phoneNumber">Phone Number:</label>
              <input
                id="phoneNumber"
                type="tel"
                name="phoneNumber"
                class="form-control"
              />
            </div>
            <div class="form-group">
              <label class="lable" for="dateOfBirth">Date of Birth:</label>
              <input
                id="dateOfBirth"
                type="date"
                name="dateOfBirth"
                class="form-control"
              />
            </div>
            <div class="form-group">
              <label class="lable" for="locationOrAddress"
                >Location or Address:</label
              >
              <textarea
                id="locationOrAddress"
                name="locationOrAddress"
                class="form-control"
              ></textarea>
            </div>
            <h2 class="text-center mt-5">MedicalHistory</h2>
            <div class="form-group">
              <label class="lable" for="diabetes">Diabetes:</label>
              <select id="diabetes" name="diabetes" class="form-control">
                <option value="No">No</option>
                <option value="Yes">Yes</option>
              </select>
            </div>
            <div class="form-group">
              <label class="lable" for="gender">Gender:</label>
              <select id="gender" name="gender" class="form-control">
                <option value="Male">Male</option>
                <option value="Female">Female</option>
              </select>
            </div>
            <div class="form-group">
              <label class="lable" for="hyperTension">HyperTension:</label>
              <select id="hyperTension" name="hyperTension" class="form-control">
                <option value="No">No</option>
                <option value="Yes">Yes</option>
              </select>
            </div>
            <div class="form-group">
              <label class="lable" for="asthma">Asthma:</label>
              <select id="asthma" name="asthma" class="form-control">
                <option value="No">No</option>
                <option value="Yes">Yes</option>
              </select>
            </div>
            <div class="form-group">
              <label class="lable" for="heartDisease">HeartDisease:</label>
              <select id="heartDisease" name="heartDisease" class="form-control">
                <option value="No">No</option>
                <option value="Yes">Yes</option>
              </select>
            </div>
            <div class="form-group">
              <label class="lable" for="surgeries"
                >Passed surgical history:</label
              >
              <textarea
                id="surgeries"
                name="surgeries"
                class="form-control"
              ></textarea>
            </div>
            <div class="form-group">
              <label class="lable2" for="allergies"
                >What are you allergic to:</label
              >
              <textarea
                id="allergies"
                name="allergies"
                class="form-control"
              ></textarea>
            </div>
            <div class="form-group">
              <label class="lable2" for="bloodType">Blood Type:</label>
              <select id="bloodType" name="bloodType" class="form-control">
                <option value="A+">A+</option>
                <option value="A-">A-</option>
                <option value="B+">B+</option>
                <option value="B-">B-</option>
                <option value="AB+">AB+</option>
                <option value="AB-">AB-</option>
                <option value="O+">O+</option>
                <option value="O-">O-</option>
              </select>
            </div>
            <div class="form-group">
              <label class="lable2" for="weight">Weight:</label>
              <input
                id="weight"
                type="number"
                name="weight"
                class="form-control"
              />
            </div>
            <div class="form-group">
              <label class="lable2" for="height">Height:</label>
              <input
                id="height"
                type="number"
                name="height"
                class="form-control"
              />
            </div>
            <div class="form-group">
              <label class="lable" for="drugs"
                >Write Drugs you use/used:</label
              >
              <textarea
                id="drugs"
                name="drugs"
                class="form-control"
              ></textarea>
            </div>
            <div class="form-group">
              <label class="lable" for="other"
                >Other:</label
              >
              <textarea
                id="other"
                name="other"
                class="form-control"
              ></textarea>
            </div>

            <h2 class="text-center mt-5 Smedia">Social Media</h2>
            <div class="form-group">
              <label class="lable2" for="facebook">facebook link:</label>
              <input
                id="facebook"
                type="text"
                name="facebook"
                class="form-control"
              />
            </div>

            <div class="form-group">
              <label class="lable2" for="instagram">instagram:</label>
              <input
                id="instagram"
                type="text"
                name="instagram"
                class="form-control"
              />
            </div>
            <div class="form-group">
              <label class="lable2" for="snapchat">snapchat:</label>
              <input
                id="snapchat"
                type="text"
                name="snapchat"
                class="form-control"
              />
            </div>
            <div class="form-group">
              <label class="lable2" for="telegram">telegram:</label>
              <input
                id="telegram"
                type="text"
                name="telegram"
                class="form-control"
              />
            </div>

            <button type="submit" class="btn btn-next btn-block">
              Next
            </button>
            <hr />
          </form>
          <h5 style="display: inline-block; font-weight: 500; color: #fff;">
            Already registered:
          </h5>
          <button class="btn btn-primary btn-block">
            <a style="text-decoration: none; color: #fff" href="/login"
              >Login</a
            >
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
